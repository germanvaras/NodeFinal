<div id="mainContainer">
    <form class="formContainer" id="formRegister">
        <h1 class="formTitle">Registrate</h1>
        <input type="text" placeholder="Nombre" name="nombre" class="formInput" id="userName" required />
        <input type="text" placeholder="Apellido" name="apellido" class="formInput" id="userLastname" required />
        <input type="text" placeholder="Username" name="username" class="formInput" id="username" required />
        <input type="email" placeholder="Email" name="userEmail" class="formInput" id="userEmail" required />
        <div class="password-container">
            <input type="password" placeholder="Contraseña" name="userNewPassword" class="formInput" id="userPassword"
                required />
            <i class="fas fa-eye-slash password-toggle" onclick="togglePasswordVisibility('userPassword', this)"></i>
        </div>
        <p class="cardDescription">La contraseña debe contener al menos una letra mayúscula, una letra minúscula, un
            número y tener al menos 8 caracteres.</p>
        <button class="buttonForm" type="submit">Registrarte</button>
        <p>Ya tienes una cuenta? <a class="linkForm" href="/api/user/login">Ingresá</a></p>
    </form>
</div>
<script src="/js/register.js"></script>
<script src="/js/passwordToggle.js"></script>