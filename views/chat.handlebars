    <h1>Chat</h1>
    <section id="containerChat" class="containerChat">
        <div id="messages">
        </div>
        <form id="chatForm" class="chatForm">
            <input type="text" name="user" id="user" class="formInput" placeholder="{{this.user.username}}"
                value="{{this.user.username}}" readonly>
            <textarea name="message" id="userMessage" class="formInput" placeholder="Mensaje" maxlength="100"></textarea>
            <button type="submit" class="buttonForm buttonChat">Enviar</button>
            <p class="cardDescription">Caracteres Restantes <span id="restCharacters">100</span></p>
            <p class="cardDescription">MÃ¡ximo 100 caracteres</p>
        </form>
    </section>
</main>
