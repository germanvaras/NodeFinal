<div id="mainContainer">
    <form class="formContainer" id="formReset">
        <h1 class="formTitle">Restablecer Contaseña</h1>
        <input type="email" placeholder="Email" name="userEmail" class="formInput" id="userEmail" required />
        <input type="text" placeholder="Token" name="token" class="formInput" id="token" required />
        <div class="password-container">
            <input type="password" placeholder="Nueva Contraseña" name="userNewPassword" class="formInput"
                id="userPassword" required />
            <i class="fas fa-eye-slash password-toggle" onclick="togglePasswordVisibility('userPassword', this)"></i>
        </div>
        <div class="password-container">
            <input type="password" placeholder="Repetir Contraseña" name="userNewPasswordRepeat" class="formInput"
                id="userRepeat" required />
            <i class="fas fa-eye-slash password-toggle" onclick="togglePasswordVisibility('userRepeat', this)"></i>
        </div>
        <p class="cardDescription">La contraseña debe contener al menos una letra mayúscula, una letra minúscula, un
            número y tener al menos 8 caracteres.</p>
        <button class="buttonForm" type="submit">Cambiar Contraseña</button>
        <p>No tiene un token? <a class="linkForm" href="/api/user/forgotPassword">Genéralo</a></p>
    </form>
</div>
<script src="/js/resetPassword.js"></script>